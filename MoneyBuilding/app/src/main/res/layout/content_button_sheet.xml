<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/colorAddMoney"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/bottomSheetHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large" >

    </TextView>


    <Button
        android:id="@+id/OKbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/editMoneyItem"
        android:background="@color/colorAddMoney"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="16dp"
        android:stateListAnimator="@null"
        android:text="確定" />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/OKbutton"
        android:layout_below="@id/editMoneyItem"
        android:background="@color/colorAddMoney"
        android:textSize="16dp"
        android:stateListAnimator="@null"
        android:text="取消" />

    <TextView
        android:id="@+id/moneyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottomSheetHeading"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="帳目金額"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <RadioGroup
        android:id="@+id/together_or_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottomSheetHeading"
        android:layout_toRightOf="@id/moneyView"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="個人記帳" />

        <RadioButton
            android:id="@+id/together"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="團體記帳" />
    </RadioGroup>
    <EditText
        android:id="@+id/moneyText"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyView"
        >
    </EditText>

    <TextView
        android:id="@+id/moneyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="帳目類型"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textAppearance="@android:style/TextAppearance.Large" />


    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/moneyTitle"
        android:scaleType="fitXY"
        android:background="@color/colorAddMoney"
        app:srcCompat="@drawable/a1" />
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/moneyTitle"
        android:layout_toRightOf="@id/imageButton1"
        android:background="@color/colorAddMoney"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/a2" />
    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/moneyTitle"
        android:layout_toRightOf="@id/imageButton2"
        android:background="@color/colorAddMoney"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/a3" />
    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/moneyTitle"
        android:layout_toRightOf="@id/imageButton3"
        android:background="@color/colorAddMoney"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/a4" />
    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/imageButton1"
        android:scaleType="fitXY"
        android:background="@color/colorAddMoney"
        app:srcCompat="@drawable/a5" />
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/imageButton2"
        android:layout_toRightOf="@id/imageButton5"
        android:scaleType="fitXY"
        android:background="@color/colorAddMoney"
        app:srcCompat="@drawable/a6" />
    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/imageButton3"
        android:layout_toRightOf="@id/imageButton6"
        android:scaleType="fitXY"
        android:background="@color/colorAddMoney"
        app:srcCompat="@drawable/a7" />
    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/imageButton4"
        android:layout_toRightOf="@id/imageButton7"
        android:scaleType="fitXY"
        android:background="@color/colorAddMoney"
        app:srcCompat="@drawable/a8" />

    <TextView
        android:id="@+id/moneyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton5"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="帳目內容"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textAppearance="@android:style/TextAppearance.Large" />
    <TextView
        android:id="@+id/moneyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyText"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/moneyTitle"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="交通"
        android:textAppearance="@android:style/TextAppearance.Large" />
    <EditText
        android:id="@+id/editMoneyItem"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton5"
        android:layout_toRightOf="@id/moneyName"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Large" />

</RelativeLayout>